<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluacionP3JT.CarsDetailPageJT"
             Title="CarsDetailPageJT">
    <StackLayout Padding="10">
        
        <Label Text="{Binding SelectedCar.model}" FontSize="24" />
        <Label Text="{Binding SelectedCar.year}" />
        <Label Text="{Binding SelectedCar.make}" />
        <Label Text="{Binding SelectedCar.transmission}" />
        <Label Text="{Binding SelectedCar.fuel_type}" />

        <Button Text="Save Car" Command="{Binding SaveCarCommand}" />
    </StackLayout>
</ContentPage>